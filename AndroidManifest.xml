<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.github.qqrs.btalarm"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.github.qqrs.btalarm.BtAlarmApplication"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name" >
        
        <receiver android:name="com.github.qqrs.btalarm.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        
        <activity android:name="com.github.qqrs.btalarm.BluetoothAlarm"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.github.qqrs.btalarm.DeviceListActivity"
                  android:label="@string/select_device"
                  android:theme="@android:style/Theme.Holo.Dialog"
                  android:configChanges="orientation|keyboardHidden" />
        <activity android:name="com.github.qqrs.btalarm.BluetoothDebugActivity"
                  android:label="Bluetooth Debug"
                  android:configChanges="orientation|keyboardHidden" />
        <service android:name="com.github.qqrs.btalarm.AlarmRegisterService" />
        <service android:name="com.github.qqrs.btalarm.AlarmRingerService" />        
    </application>
</manifest>
